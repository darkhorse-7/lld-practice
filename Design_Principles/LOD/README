// The Person class
class Person {
    private Wallet wallet;
    
    // ✅ GOOD: Don't expose wallet
    // public Wallet getWallet() { return wallet; }  // ❌ DON'T DO THIS
    
    // ✅ DO THIS INSTEAD: Person handles its own logic
    public boolean canAfford(int price) {
        return wallet.hasEnough(price);
    }
}

// The Wallet class
class Wallet {
    private int money;
    
    public boolean hasEnough(int amount) {
        return money >= amount;
    }
}

// Someone checking if the person can buy something
class Store {
    // ✅ GOOD: Follows Law of Demeter
    void checkPurchase(Person person, int price) {
        // Simple: Just ask the person
        if (person.canAfford(price)) {
            System.out.println("Can buy!");
        } else {
            System.out.println("Too poor!");
        }
    }
}